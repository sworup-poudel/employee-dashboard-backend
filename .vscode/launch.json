{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug TS with ts-node",
        "runtimeArgs": [
          "-r",
          "ts-node/register"
        ],
        "args": [
          "${workspaceFolder}/src/index.ts"
        ],
        "skipFiles": [
          "<node_internals>/**"
        ],
        "env": {
          "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
        }
      }
    ]
  }
  